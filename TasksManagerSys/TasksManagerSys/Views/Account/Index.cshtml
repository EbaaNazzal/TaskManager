@model LoginModel
@{
    Layout = "~/Views/Shared/LayoutView.cshtml";
}

@section body{
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4" style="border: 1px solid #bfbfbf00 !important; box-shadow: 0px 0px 9px #aaaaaa !important; padding-right: 45px !important; border-radius: 7px !important; text-align: center !important; margin-top: 10% !important; padding-left: 45px !important; padding-bottom: 24px;">
                <form method="post">
                    <div class="row">
                        <h1 style=" text-align: center; font-size: 1.8em; color: #838383; padding-bottom: 20px; margin-bottom: 30px; border-bottom: #efefef 1px solid;">
                        Login to your account
                        </h1>
                    </div>
                    <div class="row">
                        <div class="form-group">
                                <input class="form-control" placeholder="Please type username or email" asp-for="Email"/>
                                <span asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                                <input class="form-control" placeholder="Please type password" asp-for="Password"/>
                                <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="row">
                        <span>@ViewData["ErrorMg"]</span>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Login" asp-action="Login" />
                </form>
            </div>
        </div>
    </div>
}
